<style>
  .page_title_bar {
    background-color: navy;
    border: 2px solid grey;
    height: 48px;
    padding: 5px;
  }

  .page_title_bar .title {
    float: left;
    color: white;
    font-weight: bold;
    font-size: 20px;
    padding-left: 5px
  }

  .page_title_bar .actions {
    float: right;
  }

</style>
<div class="page_title_bar">
  <div class="title"><%= locals[:title] %></div>
  <% if locals[:actions] %>
      <% if locals[:actions].is_a?(Array) %>
          <div class="actions">
            <% locals[:actions].each do |action_html| %>
                <%= raw action_html %>
            <% end %>
          </div>
      <% else %>
          make the actions an array!!
      <% end %>
  <% end %>
</div>
<br>
