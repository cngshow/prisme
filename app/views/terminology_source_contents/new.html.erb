<div class="page-header"><h1>New terminology source upload</h1></div>

<%= form_for @terminology_source do |f| %>
    <% if @terminology_source.errors.any? %>
        <div class="panel panel-warning errors">
          <div class="panel-heading">
            <h5><i class="glyphicon glyphicon-exclamation-sign"></i> Found errors while saving</h5>
          </div>

          <ul class="panel-body">
            <% @terminology_source.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :user %>
      <%= f.text_field :user, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :upload %>
      <%= f.file_field :upload, class: 'form-control'%>
    </div>

    <!--<input id="input-id" type="file" class="file" data-preview-file-type="text", name="terminology_source_contents[upload]" >-->
    <!--<script type="text/javascript" charset="utf-8">-->
     <!--$("#input-id").fileinput();-->
    <!--</script>-->

    <%= f.submit 'Upload', class: 'btn btn-primary' %>
<% end %>
<%= link_to 'Back', terminology_source_contents_path %>