<%
  subset = nil
  striped = 'transparent'
  done = []
  domain = discovery_details.first.discovery_request.domain.gsub(/\s+/,'')

  discovery_details.each do |row|
    done << row.done?
    last = row.last_discovery

    unless row.subset.eql?(subset)
      subset = row.subset
      striped = (striped.eql?('transparent') ? '#f2f2f2;' : 'transparent')
    end
    tr_id = "#{row.va_site_id}_#{row.id}_#{domain}_#{row.subset.gsub(/\s+/,'')}_discovery"
%>
    <tr id="<%= tr_id %>" style="background-color: <%= striped %>">
      <td class="site_name"><%= "#{row.va_site_id} - #{row.va_site.name}" %></td>
      <td class="subset_name"><%= row.subset %></td>
      <td style="text-align: right; font-weight: bold" width="10%">
        User Name:<br>
        Status:<br>
        Request Time:<br>
        Response Time:<br>
        <!--Has Data:<br>-->
        Actions:<br>
      </td>
      <td>
        <%= render partial: 'discovery_display', locals: {tr_id: tr_id, detail: row, current: true} %>
      </td>
      <td>
        <%= render partial: 'discovery_display', locals: {tr_id: tr_id, detail: last, current: false} %>
      </td>
    </tr>
<% end %>
<script type="text/javascript" charset="utf-8">
    function discoveryCsv(btn) {
        var detail_id = $(btn).closest('.btn-group').data('btngroup_detail_id');
        $(btn).attr('disabled', true);

        $.get(gon.routes.discovery_csv_path, {format: 'txt', discovery_detail_id: detail_id}, function(data) {
            var blob = new Blob([data], {type: "text/plain;charset=utf-8"});
            saveAs(blob,'discovery_'+detail_id+'.csv');
            $(btn).attr('disabled', false);
        });
    }

    (function() {
        var req_tbl = $('#discovery_' + '<%= "#{request_ar.id}_#{domain.sub(/\s+/,'')}"%>');
        req_tbl.data('done', <%= ! (done.uniq.include? false) %>);
    })();
</script>


<!-- modal popup for viewing checksum hl7 -->
<style>
  textarea#textarea_discovery_hl7 {
    width:100%;
    direction:rtl;
    display:block;
    max-width:100%;
    line-height:1.5;
    padding:15px 15px 30px;
    border-radius:3px;
