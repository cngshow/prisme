<% if rows && ! rows.empty? %>
    <% rows.each do |row| %>
        <tr>
          <td valign="bottom"><%= row[0] %></td>
          <td><%= row[1] %></td>
          <td><%= row[2] %></td>
          <td><%= row[3] %></td>
          <td><%= row[4] %></td>
          <td><%= row[5] %></td>
          <td><%= row[6] %></td>
          <td><%= row[7].eql?(:'0') ? 'Inactive' : 'Active' %></td>
        </tr>
    <% end %>
<% else %>
    <tr style="background-color: transparent">
      <td colspan="8">There are no records in <%= app1 %> that are not in  <%= app2 %>.</td>
    </tr>
<% end %>
<style>
  td {
    vertical-align:top;
  }
</style>