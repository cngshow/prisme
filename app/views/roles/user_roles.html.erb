<h1>Roles by <%= @roles_hash[:type] %> user</h1>
<p>The roles for user <%=@roles_hash[:user]%>:</p>
<%@roles_hash[:roles].each do |role|%>
    <li>
      <%= role %>
      <% if @roles_hash.has_key?(:with_isaac_db_id) && @roles_hash[:with_isaac_db_id].has_key?(role) && ! @roles_hash[:with_isaac_db_id][role].empty? %>
          <ol>
            <% @roles_hash[:with_isaac_db_id][role].each do |uuid| %>
                <li>ISAAC UUID:&nbsp;&nbsp;<%= uuid %></li>
            <% end %>
          </ol>
      <% end %>
    </li>
<%end%>
<br><p>The token is -- </p>
<%=@roles_hash[:token] %>
